{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.Grafana.Loki"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{CorrelationId}] [{ApplicationId}/{Environment}] [{RequestMethod} {RequestPath}] [User: {UserId}] [IP: {ClientIpAddress}] {Message:lj} {NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithExceptionDetails"],
    "Properties": {
      "Application": "Shortha",
      "Environment": "Development"
    }
  },
  "AllowedHosts": "*"
}
